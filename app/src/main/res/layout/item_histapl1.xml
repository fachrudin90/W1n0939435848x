<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:textColor="@android:color/black"
            android:textIsSelectable="true"
            android:id="@+id/text1"
            android:layout_below="@id/lin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/pinjaman_ke"/>

        <View
            android:id="@+id/view1"
            android:layout_below="@id/text1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/grey"/>

        <TextView
            android:textColor="@android:color/black"
            android:textIsSelectable="true"
            android:id="@+id/text2"
            android:layout_below="@id/view1"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/durasi1"/>

        <TextView
            android:textIsSelectable="true"
            android:id="@+id/text3"
            android:layout_below="@id/text2"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:textColor="@color/colorgreendet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@android:color/black"
            android:textIsSelectable="true"
            android:id="@+id/text4"
            android:layout_below="@id/view1"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jumlah"/>

        <TextView
            android:textIsSelectable="true"
            android:id="@+id/text5"
            android:layout_alignLeft="@id/text4"
            android:layout_below="@id/text2"
            android:padding="5dp"
            android:textColor="@color/coloryellowdet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@android:color/black"
            android:textIsSelectable="true"
            android:id="@+id/text6"
            android:layout_below="@id/view1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bunga"/>

        <TextView
            android:textIsSelectable="true"
            android:id="@+id/text7"
            android:layout_alignRight="@id/text6"
            android:layout_below="@id/text2"
            android:padding="5dp"
            android:textColor="@color/colorgreendet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img1"
            android:layout_below="@id/text3"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/panahbawah"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/text3"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:layout_toLeftOf="@id/img1"
            android:background="@color/grey"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/text3"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/img1"
            android:background="@color/grey"/>

        <TextView
            android:textColor="@android:color/black"
            android:textIsSelectable="true"
            android:id="@+id/text8"
            android:layout_below="@id/img1"
            android:layout_alignLeft="@id/text4"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_bayar"/>

        <TextView
            android:textIsSelectable="true"
            android:id="@+id/text9"
            android:layout_below="@id/text8"
            android:layout_alignLeft="@id/text4"
            android:padding="5dp"
            android:textColor="@color/coloryellowdet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@android:color/black"
            android:textIsSelectable="true"
            android:id="@+id/text10"
            android:layout_below="@id/img1"
            android:layout_alignRight="@id/text6"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jatuh_tempo1"/>

        <TextView
            android:textIsSelectable="true"
            android:id="@+id/text11"
            android:layout_below="@id/text10"
            android:layout_alignRight="@id/text10"
            android:padding="5dp"
            android:textColor="@color/colorreddet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input1"
            android:layout_below="@id/text11"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/input1a"
                android:inputType="none"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tujuan_pinjaman"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input2"
            android:layout_below="@id/input1"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/input2a"
                android:inputType="none"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/status_tahap"/>
        </android.support.design.widget.TextInputLayout>


        <TextView
            android:textColor="@android:color/black"
            android:textIsSelectable="true"
            android:id="@+id/text1a"
            android:layout_below="@id/input2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/histori_tahapan"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_hist"
            android:layout_below="@id/text1a"
            android:focusable="false"
            android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@android:color/black"
            android:textIsSelectable="true"
            android:id="@+id/text2a"
            android:layout_below="@id/rv_hist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/notes"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_note"
            android:layout_below="@id/text2a"
            android:focusable="false"
            android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>